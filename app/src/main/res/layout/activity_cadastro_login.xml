<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="activity.CadastroLoginActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_cadastro_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_12"
        android:hint="Email">

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/edit_cadastro_login_email"
            android:layout_width="match_parent"
            android:textColor="@color/preto"

            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_cadastro_login_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_12"
        android:hint="Senha">

        <EditText
            android:id="@+id/edit_cadastro_login_senha"
            android:layout_width="match_parent"
            android:inputType="textPassword"

            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_cadastro_login_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_12"
        android:hint="repita a senha">

        <EditText
            android:id="@+id/edit_cadastro_login_confirmar"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_cadastro_login_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_12"
        android:hint="Nome de usuario">

        <EditText
            android:id="@+id/edit_cadastro_login_nome"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_cadastro_login_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_12"
        android:hint="Telefone">

        <EditText
            android:id="@+id/edit_cadastro_login_telefone"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </View>



    <Button
        android:id="@+id/btn_cadastro_login_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:background="@drawable/btn_rounded_roxo"
        android:textColor="@color/branco"

        android:layout_marginTop="32dp"
        android:text="salvar" />
</LinearLayout>
