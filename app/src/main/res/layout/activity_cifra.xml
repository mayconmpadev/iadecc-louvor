<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_cifra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LetraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_voltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:padding="18dp"
            android:src="@drawable/ic_action_arrow_back_black_24dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Cifra"

            android:textColor="@color/preto"
            android:textSize="20dp">

        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </View>

        <Button
            android:id="@+id/btn_notas_cifra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tranparente"
            android:text="Notas"


            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btn_limpar_cifra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tranparente"
            android:text="Limpar"


            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza">

    </View>

    <EditText
        android:id="@+id/edit_cifra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/borda"
        android:gravity="top"
        android:padding="16dp">

    </EditText>

    <Button
        android:id="@+id/btn_salvar_cifra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_rounded_roxo"
        android:padding="16dp"
        android:text="salvar"


        android:textColor="@color/branco" />
</LinearLayout>