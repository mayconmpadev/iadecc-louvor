<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".activity.EditaLetraActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/preto"
               android:text="Nome:"/>
           <EditText
               android:id="@+id/editar_letra_edit_nome"
               android:layout_width="match_parent"
               android:inputType="textCapSentences"
               android:layout_height="wrap_content"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/preto"
               android:text="Cantor:"/>
           <EditText
               android:id="@+id/editar_letra_edit_cantor"
               android:layout_width="match_parent"
               android:inputType="textCapWords"
               android:layout_height="wrap_content"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/preto"
               android:text="Tom:"/>
           <EditText
               android:id="@+id/editar_letra_edit_tom"
               android:layout_width="match_parent"
               android:inputType="text"
               android:layout_height="wrap_content"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/preto"
               android:text="Link:"/>
           <EditText
               android:id="@+id/editar_letra_edit_link"
               android:layout_width="match_parent"
               android:inputType="text"
               android:layout_height="wrap_content"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/preto"
               android:text="Letra:"/>
           <EditText
               android:id="@+id/editar_letra_edit_letra"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="top"
               android:inputType="textMultiLine"
               android:layout_weight="1"
               />
       </LinearLayout>
   </ScrollView>
</LinearLayout>